<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/uber_slideup_end"
        app:constraintSetStart="@id/uber_slideup_start"
        app:duration="300"
        app:interpolator="easeIn">
        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="200"
            app:touchAnchorId="@id/content"
            app:touchAnchorSide="top" />
        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="45"
                app:target="@id/tittleTV" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="60"
                app:target="@id/tittleTV" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="45"
                app:target="@id/backArrow" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="60"
                app:target="@id/backArrow" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="80"
                app:target="@id/content" />
            <KeyPosition
                app:framePosition="85"
                app:keyPositionType="pathRelative"
                app:percentX="0"
                app:percentY="0"
                app:target="@id/tittleTV" />

            <KeyAttribute
                app:framePosition="60"
                app:target="@id/blackBackgroundView">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@android:color/black" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="10"
                app:target="@id/blackBackgroundView">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@android:color/transparent" />
            </KeyAttribute>

        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/uber_slideup_start">

        <Constraint
            android:id="@id/blackBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/transparent" />
        </Constraint>
        <Constraint
            android:id="@id/content"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/tittleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/uber_slideup_end">

        <Constraint
            android:id="@id/blackBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/black" />
        </Constraint>
        <Constraint
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tittleTV" />

        <Constraint
            android:id="@id/tittleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>